# Test runner Docker image for Task 7.14 integration tests

FROM python:3.12-slim

# Install system dependencies including client tools for testing
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libpq-dev \
    postgresql-client \
    redis-tools \
    curl \
    git \
    bc \
    locales \
    locales-all \
    && rm -rf /var/lib/apt/lists/*

# Generate locales
RUN locale-gen C.UTF-8 && \
    locale-gen tr_TR.UTF-8 && \
    update-locale LANG=C.UTF-8

# Set deterministic environment
ENV PYTHONHASHSEED=0
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV LC_ALL=C.UTF-8
ENV LANG=C.UTF-8
ENV TZ=UTC

# Create app directory
WORKDIR /app

# Copy requirements
COPY apps/api/requirements.txt requirements.txt
COPY apps/api/requirements-dev.txt requirements-dev.txt

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir -r requirements-dev.txt && \
    pip install --no-cache-dir pytest-timeout pytest-cov pytest-xdist

# Create test user
RUN useradd -m -s /bin/bash testrunner
USER testrunner

# Set Python path
ENV PYTHONPATH=/app

# Default command
CMD ["pytest", "-v"]