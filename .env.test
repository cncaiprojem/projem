# =================================================================================
# TEST ENVIRONMENT CONFIGURATION
# =================================================================================
# Bu dosya test ortamı için özel ayarları içerir
# Test veritabanı ve servisler için izole edilmiş konfigürasyon
# =================================================================================

# GENEL TEST AYARLARI
ENV=test
DEV_AUTH_BYPASS=true
API_PORT=8001
WEB_PORT=3001

# TEST VERITABANI
# Test için ayrı PostgreSQL veritabanı
POSTGRES_USER=test_user
POSTGRES_PASSWORD=test_password
POSTGRES_DB=freecad_test
POSTGRES_PORT=5433
DATABASE_URL=postgresql+psycopg2://test_user:test_password@localhost:5433/freecad_test

# TEST REDIS
# Test için ayrı Redis instance
REDIS_URL=redis://localhost:6380/0
REDIS_PORT=6380

# TEST STORAGE
# Test için MinIO bucket
MINIO_ROOT_USER=test_minio
MINIO_ROOT_PASSWORD=test_minio_password
S3_BUCKET_NAME=test-artifacts
AWS_ACCESS_KEY_ID=test_minio
AWS_SECRET_ACCESS_KEY=test_minio_password
AWS_S3_ENDPOINT=http://localhost:9001
AWS_S3_REGION=us-east-1

# TEST MONİTORİNG
# Test ortamı için monitoring (kapalı)
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_SERVICE_NAME=freecad-api-test
SENTRY_DSN=

# TEST GÜVENLİK
# Test için özel secret key
SECRET_KEY=test-secret-key-for-testing-only-32-chars-minimum
ACCESS_TOKEN_EXPIRE_MINUTES=5
REFRESH_TOKEN_EXPIRE_MINUTES=10

# TEST FREECAD
# Test için FreeCAD ayarları
FREECADCMD_PATH=
FREECAD_ASM4_REQUIRED=false
FREECAD_TIMEOUT_SECONDS=60

# TEST AI INTEGRATION
# Mock AI services for testing
OPENAI_API_KEY=sk-test-mock-key-for-automated-testing
